{
  "$ref": "#/definitions/Config",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "Config": {
      "additionalProperties": false,
      "properties": {
        "$schema": {
          "type": "string"
        },
        "plugins": {
          "description": "A list of plugins to load.\n\nEach plugin can either be a path to a plugin file, or the name of a built-in plugin.",
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "pluginsConfig": {
          "description": "Configuration for specific plugins.",
          "properties": {
            "translate": {
              "additionalProperties": false,
              "properties": {
                "url": {
                  "type": "string"
                }
              },
              "type": "object"
            }
          },
          "type": "object"
        },
        "ratelimit": {
          "additionalProperties": false,
          "description": "How many seconds to wait before allowing a user to run a command again.",
          "properties": {
            "admin": {
              "type": "number"
            },
            "trusted": {
              "type": "number"
            }
          },
          "required": ["admin", "trusted"],
          "type": "object"
        },
        "whitelist": {
          "additionalProperties": false,
          "description": "User IDs that should be given certain permissions.",
          "properties": {
            "admin": {
              "items": {
                "type": "string"
              },
              "type": "array"
            },
            "trusted": {
              "items": {
                "type": "string"
              },
              "type": "array"
            }
          },
          "required": ["admin", "trusted"],
          "type": "object"
        }
      },
      "required": ["plugins", "whitelist", "ratelimit"],
      "type": "object"
    }
  }
}

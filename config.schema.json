{
  "$ref": "#/definitions/Config",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "Config": {
      "additionalProperties": false,
      "properties": {
        "$schema": {
          "type": "string"
        },
        "aliases": {
          "additionalProperties": {
            "type": "string"
          },
          "description": "Global command aliases. The key is the command name for the alias, and the value is the command name to alias.",
          "type": "object"
        },
        "plugins": {
          "description": "A list of plugins to load.\n\nEach plugin can either be a path to a plugin file, or the name of a built-in plugin.",
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "pluginsConfig": {
          "description": "Configuration for specific plugins.",
          "properties": {
            "translate": {
              "additionalProperties": false,
              "properties": {
                "url": {
                  "description": "The URL to a LibreTranslate server. D",
                  "type": "string"
                }
              },
              "type": "object"
            }
          },
          "type": "object"
        },
        "ratelimit": {
          "additionalProperties": false,
          "description": "Per-user rate limits for different permission levels, in milliseconds.",
          "properties": {
            "admin": {
              "type": "number"
            },
            "default": {
              "type": "number"
            },
            "trusted": {
              "type": "number"
            }
          },
          "required": ["admin", "trusted", "default"],
          "type": "object"
        },
        "visible": {
          "description": "If true, disables Puppeteer's headless mode.",
          "type": "boolean"
        },
        "whitelist": {
          "additionalProperties": false,
          "description": "User IDs that should be given certain permissions.",
          "properties": {
            "admin": {
              "items": {
                "type": "string"
              },
              "type": "array"
            },
            "trusted": {
              "items": {
                "type": "string"
              },
              "type": "array"
            }
          },
          "required": ["admin", "trusted"],
          "type": "object"
        }
      },
      "required": ["plugins", "whitelist", "ratelimit"],
      "type": "object"
    }
  }
}
